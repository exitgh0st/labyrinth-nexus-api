<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="008-add-password-reset-fields" author="developer">
        <addColumn tableName="user">
            <column name="password_reset_token" type="VARCHAR(255)" />
            <column name="password_reset_expiry" type="TIMESTAMP" />
        </addColumn>

        <createIndex indexName="idx_user_password_reset_token" tableName="user">
            <column name="password_reset_token" />
        </createIndex>

        <rollback>
            <dropIndex tableName="user" indexName="idx_user_password_reset_token" />
            <dropColumn tableName="user">
                <column name="password_reset_token" />
                <column name="password_reset_expiry" />
            </dropColumn>
        </rollback>
    </changeSet>
</databaseChangeLog>